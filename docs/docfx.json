{
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "**/*.csproj"
          ],
          "exclude": [
            "tests/**"
          ]
        }
      ],
      "dest": "api",
      "properties": {
        "TargetFramework": "netstandard2.0"
      }
    }
  ],
  "build": {
    "content": [
      {
        "src": "../src",
        "files": [
          "**/README.md"
        ],
        "dest": "docs/modules"
      },
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "docs-site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "docs-site/projects/source-generators",
    "template": [
      "default",
      "modern",
      "docs-site/mff-template"
    ],
    "globalMetadata": {
      "_appName": "Source Generators",
      "_appTitle": "Source Generators | MavFi Foundation",
      "_appFaviconPath": "../../images/MavFiIcon.png",
      "_appLogoPath": "../../images/MavFiLogo.png",
      "_gitContribute": {
        "branch": "main"
      },
      "_appFooter": "@ 2025 MavFi Foundation",
      "_enableSearch": true,
      "pdf": true
    }
  }
}